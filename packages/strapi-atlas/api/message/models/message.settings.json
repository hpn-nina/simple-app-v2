{
  "kind": "collectionType",
  "collectionName": "messages",
  "info": {
    "name": "Message"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "fromUser": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "toUser": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "message": {
      "type": "richtext",
      "required": true
    },
    "messageTitle": {
      "type": "string"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    }
  }
}
